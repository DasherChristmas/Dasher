{
  "$id": "https://dasherchristmas.github.io/schemas/controllerset",
  "title": "Controller set",
  "type": "object",
  "properties": {
    "vendor": {
      "type": "string"
    },
    "abstractVariants": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/variant"
      }
    },
    "controllers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/controller"
      }
    }
  },
  "required": ["vendor", "controllers"],
  "definitions": {
    "variant": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "extends": {
          "type": "string"
        },
        "noWebUI": {
          "type": "boolean"
        },
        "upload": {
          "type": "boolean"
        },
        "inputOnlyUpload": {
          "type": "boolean"
        },
        "autoUpload": {
          "type": "boolean"
        },
        "pixelPortCommonSettings": {
          "type": "boolean"
        },
        "pixelZigZag": {
          "type": "boolean"
        },
        "maxZigZag": {
          "type": "number"
        },
        "fullControl": {
          "type": "boolean"
        },
        "multipleSimulOutProtocols": {
          "type": "boolean"
        },
        "multipleSimulInProtocols": {
          "type": "boolean"
        },
        "ledPanelMatrix": {
          "type": "boolean"
        },
        "allInputUniversesSameSize": {
          "type": "boolean"
        },
        "virtualStrings": {
          "type": "boolean"
        },
        "autoLayout": {
          "type": "boolean"
        },
        "mergeConsecutiveVirtStrings": {
          "type": "boolean"
        },
        "remotes": {
          "type": "boolean"
        },
        "defaultBrightness": {
          "type": "boolean"
        },
        "maxInputUniverses": {
          "type": "number"
        },
        "maxSerialPortChannels": {
          "type": "number"
        },
        "serialProtocols": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protocol"
          }
        },
        "pixelProtocols": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protocol"
          }
        },
        "inputProtocols": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protocol"
          }
        },
        "maxPixelPortChannels": {
          "type": "number"
        },
        "allSmartRemoteTypesPerPortSame": {
          "type": "boolean"
        },
        "smartRemotes": {
          "type": "number"
        },
        "needsDDPInputUpload": {
          "type": "boolean"
        },
        "smartRemoteTypes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "maxPixelPort": {
          "type": "number"
        },
        "maxSerialPort": {
          "type": "number"
        },
        "banks": {
          "type": "number"
        },
        "bankSize": {
          "type": "number"
        },
        "maxStartNulls": {
          "type": "number"
        },
        "maxEndNulls": {
          "type": "number"
        },
        "maxGroup": {
          "type": "number"
        },
        "minGroup": {
          "type": "number"
        },
        "needsFullUniverseForSerial": {
          "type": "boolean"
        },
        "allInputUniversesMustBe510": {
          "type": "boolean"
        },
        "forceExpanded": {
          "type": "boolean"
        },
        "pixelPortGrouping": {
          "type": "boolean"
        },
        "pixelPortColorOrder": {
          "type": "boolean"
        },
        "maxInputUniverseChannels": {
          "type": "number"
        },
        "minInputUniverseChannels": {
          "type": "number"
        },
        "universesMustBeSequential": {
          "type": "boolean"
        },
        "pixelPortEndNullPixels": {
          "type": "boolean"
        },
        "universesMustBeInNumericalOrder": {
          "type": "boolean"
        },
        "defaultGamma": {
          "type": "boolean"
        },
        "preferredInputProtocol": {
          "$ref": "#/definitions/protocol"
        },
        "virtualMatrix": {
          "type": "boolean"
        },
        "maxVirtualMatrixPorts": {
          "type": "number"
        },
        "pixelPortBrightness": {
          "type": "boolean"
        },
        "pixelPortGamma": {
          "type": "boolean"
        },
        "pixelPortNullPixels": {
          "type": "boolean"
        },
        "pixelPortDirection": {
          "type": "boolean"
        },
        "universePerString": {
          "type": "boolean"
        },
        "dmxAfterPixels": {
          "type": "boolean"
        }
      },
      "additionalProperties": true,
      "required": ["name"]
    },
    "controller": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "variants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/variant"
